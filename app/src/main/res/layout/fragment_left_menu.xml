<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    >
    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3a2327"
        >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_news"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageView1"
            android:layout_alignTop="@id/imageView1"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWS"
            android:layout_toRightOf="@id/imageView1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_collect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3a2327"
        >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_read"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageView2"
            android:layout_alignTop="@id/imageView2"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAVORITE"
            android:layout_toRightOf="@id/imageView2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView2"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3a2327"

        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_local_news"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageView3"
            android:layout_alignTop="@id/imageView3"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCAL"
            android:layout_toRightOf="@id/imageView3"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView3"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3a2327"

        >
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_ties"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageView4"
            android:layout_alignTop="@id/imageView4"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMENT"
            android:layout_toRightOf="@id/imageView4"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView4"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#3a2327"

        >
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_pics"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textSize="20sp"
            android:layout_toRightOf="@id/imageView5"
            android:layout_alignTop="@id/imageView5"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHOTO"
            android:layout_toRightOf="@id/imageView5"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView5"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
</LinearLayout>