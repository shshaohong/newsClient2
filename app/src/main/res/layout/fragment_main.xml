<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <ImageView
            android:id="@+id/type_move_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/type_move_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <com.edu.feicui.newsclient.view.HorizontalListView
            android:id="@+id/hl_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/type_move_right"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <com.edu.feicui.newsclient.xlistview.XListView
        android:id="@+id/xl_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.edu.feicui.newsclient.xlistview.XListView>
</LinearLayout>